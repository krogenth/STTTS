<UserControl x:Class="STTTS.UI.Views.Settings.SettingsWhisperModelView"
			 xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:STTTS.UI.ViewModels.Settings"
             mc:Ignorable="d"
             x:CompileBindings="True"
			 x:DataType="vm:SettingsWhisperModelViewModel">
	<ScrollViewer Name="WhisperModelPage"
				  HorizontalAlignment="Stretch"
				  VerticalAlignment="Stretch"
				  HorizontalScrollBarVisibility="Disabled"
				  VerticalScrollBarVisibility="Auto">
		<Grid HorizontalAlignment="Stretch"
			  Margin="20,10,10,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock Grid.Column="0"
					   Text="Model"
					   Width="250"
					   VerticalAlignment="Center" />
			<ComboBox Grid.Column="1"
					  Name="WhisperModelSelector"
					  ItemsSource="{Binding AvailableModels}"
					  SelectedItem="{Binding SelectedModelModel}"
					  Width="350" />
		</Grid>
	</ScrollViewer>
</UserControl>
